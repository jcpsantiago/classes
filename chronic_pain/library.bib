keywords = {Animals,Biological,Blood Glucose,Blood Glucose: metabolism,Glucose Clamp Technique,Glucose Clamp Technique: methods,Glucose Intolerance,Glucose Intolerance: diagnosis,Glucose Intolerance: metabolism,Homeostasis,Homeostasis: physiology,Humans,Insulin Resistance,Models},
month = {jan},
number = {1},
pages = {E15--26},
pmid = {17957034},
title = {{Current approaches for assessing insulin sensitivity and resistance in vivo: advantages, limitations, and appropriate usage.}},
