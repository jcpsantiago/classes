pages = {233--243},
pmid = {3406323},
title = {{The significance of sleep onset and slow wave sleep for nocturnal release of growth hormone (GH) and cortisol}},
url = {http://linkinghub.elsevier.com/retrieve/pii/0306453088900212},
volume = {13},
year = {1988}
